{
    "version": "2.0.0",
"tasks": [
    
    {
        "type": "cppbuild",
        "label": "C: gcc build active file",
        "command": "gcc",
        "args": [
            "-g",
            "-Wall",
            "-std=c99",
            "${fileDirname}/*.c",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
    }
]
}